(in-package :cl-hashing)

(defmacro define-fnv1a-hash (name (bit-length prime offset))
  `(progn
     (declaim (ftype (function (octet-array uint32) (unsigned-byte ,bit-length)) ,name))
     (defun ,name (buffer size)
       (declare (optimize (speed 3) (safety 0) (debug 0)))
       (loop with hash = ,offset
             for i fixnum from 0 below size
             do (setf hash (mask-field (byte ,bit-length 0) (logxor hash (aref buffer i)))
                      hash (mask-field (byte ,bit-length 0) (* hash ,prime)))
             finally (return hash)))))

